# /bin/bash
year=$(date +"%y")
month=$(date +"%m")
day=$(date +"%d")
echo "# Réu du $day/$month" > CR_reu/$year$month$day.md
sed -ie '/<!-- new reu -->/a\
> - [Réu du '"$day"'-'"$month"'-'"$year"'](/CR_reu/'"$year$month$day"'.md)  
' README.md 
if [[ $# -gt 0 ]]
  then
  if [[ $1 == "-o" ]]
  then
	open CR_reu/$year$month$day.md
  fi
fi
rm README.mde
git pull
git add *
git commit -m "Ajout des fichiers pour la réunion du jour" .
git pull
git push
